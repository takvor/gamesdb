<h1>Listing games</h1>

<% flash.each do |key, msg| %>
  <div id="<%= key %>">
    <p><%= msg %><p>
  </div>
<% end %>

<table>
  <tr>
    <th>Title</th>
    <th>Players</th>
    <th>Completed</th>
    <th>Genre</th>
    <th>System</th>
    <th>Location</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @games.each do |game| %>
  <tr>
    <td><%= game.title %></td>
    <td><%= game.players %></td>
    <td><%= game.completed %></td>
    <td><%= game.genre %></td>
    <td><%= game.system %></td>
    <td><%= game.location %></td>
    <td><%= link_to 'Show', game %></td>
    <td><%= link_to 'Edit', edit_game_path(game) %></td>
    <td><%= link_to 'Destroy', game, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Game', new_game_path %>
